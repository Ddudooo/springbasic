<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="memberService" class="study.springbasic.core.member.MemberServiceImpl">
		<constructor-arg name="memberRepository" ref="memberRepository"/>
	</bean>

	<bean id="memberRepository" class="study.springbasic.core.member.MemoryMemberRepository"/>

	<bean id="orderService" class="study.springbasic.core.order.OrderServiceImpl">
		<constructor-arg name="discountPolicy" ref="disCountPolicy"/>
		<constructor-arg name="memberRepository" ref="memberRepository"/>
	</bean>

	<bean id="disCountPolicy" class="study.springbasic.core.discount.RateDiscountPolicy"/>
</beans>